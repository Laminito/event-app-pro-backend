# Railway Environment Variables
# Ces variables seront automatiquement remplacées par Railway

# Server Configuration
NODE_ENV=production
PORT=${{PORT}}
API_VERSION=v1

# MongoDB Railway (utilise les variables fournies par Railway)
MONGO_INITDB_ROOT_USERNAME=${{MONGO_INITDB_ROOT_USERNAME}}
MONGO_INITDB_ROOT_PASSWORD=${{MONGO_INITDB_ROOT_PASSWORD}}

# Option 1: Private Network (recommandé pour Railway)
MONGODB_URI=${{MONGO_URL}}/eventapp?authSource=admin

# Option 2: Public URL (si nécessaire)
# MONGODB_URI=${{MONGO_PUBLIC_URL}}/eventapp?authSource=admin

# JWT Secret - CHANGEZ CECI EN PRODUCTION!
JWT_SECRET=event_app_pro_production_secret_key_change_this_to_something_very_secure
JWT_EXPIRE=7d

# Email Configuration (à configurer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=${{EMAIL_USER}}
EMAIL_PASSWORD=${{EMAIL_PASSWORD}}
EMAIL_FROM=noreply@eventapppro.sn

# Payment Gateways (à configurer)
WAVE_API_KEY=${{WAVE_API_KEY}}
WAVE_SECRET=${{WAVE_SECRET}}
WAVE_WEBHOOK_SECRET=${{WAVE_WEBHOOK_SECRET}}

ORANGE_MONEY_API_KEY=${{ORANGE_MONEY_API_KEY}}
ORANGE_MONEY_SECRET=${{ORANGE_MONEY_SECRET}}

FREE_MONEY_API_KEY=${{FREE_MONEY_API_KEY}}
FREE_MONEY_SECRET=${{FREE_MONEY_SECRET}}

# Frontend URL (CORS)
FRONTEND_URL=${{FRONTEND_URL}}

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_REQUESTS_UNAUTH=100
